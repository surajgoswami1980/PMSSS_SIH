<style>
    body {
        /* background: linear-gradient(135deg, #e08105,#f4f6f4, #11dc36); */
        background: linear-gradient(to right, #f7fafc, #e2e6f3);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        margin-top: 2rem;
    }

    .carousel-container {
        position: relative;
        overflow: hidden;
        
    }

    .carousel-image {
        width: 100%;
        height: 100%;
        /* object-fit: cover; */
        transition: opacity 1s ease-in-out;
    }

    .carousel-slide {
        position: absolute;
        
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 1s ease-in-out;
    }

    .carousel-slide.active {
        opacity: 1;
    }

    .card {
        position: relative;
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: #fff;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .card-img-top {
        object-fit: cover;
        height: 20rem; /* Adjust height as needed */
    }

    .card-body {
        padding: 1.25rem;
        flex: 1;
    }

    .card-text {
        font-size: 1.1rem;
        color: #333;
    }

    .card-img-overlay {
        background: rgba(0, 0, 0, 0.3);
        border-radius: 0.75rem;
    }

    .title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .price {
        font-size: 1.1rem;
        color: #007bff;
    }

    .carousel-slide {
        height: 40vh;
        width: 100%;
    }

    .carousel-container img {
        width: 100%;
        height: 100%;
    }
    .animated-text {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 1s ease-out forwards;
}

/* Keyframes for the text animation */
@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Text Styling */
@media (max-width: 991px) {
    .text-section h1 {
        font-size: 40px; /* Adjust font size for medium devices */
    }

    .text-section h3 {
        font-size: 24px;
    }

    .btn {
        font-size: 18px; /* Slightly smaller button text on medium devices */
    }
}

@media (max-width: 767px) {
    .text-section h1 {
        font-size: 34px; /* Adjust font size for small devices */
    }

    .text-section h3 {
        font-size: 20px;
    }

    .btn {
        font-size: 16px; /* Smaller button text on small devices */
    }

    img {
        width: 100%; /* Ensure image takes full width on smaller screens */
    }
}

@media (max-width: 576px) {
    .text-section h1 {
        font-size: 30px; /* Smaller font size for extra small devices */
    }

    .text-section h3 {
        font-size: 18px;
    }

    .btn {
        font-size: 14px; /* Adjust button size for extra small devices */
    }

    img {
        width: 100%;
    }
}
</style>
