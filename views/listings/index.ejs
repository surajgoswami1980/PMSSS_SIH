<script>
    // Carousel Animation
    let currentIndex = 0;
    const slides = document.querySelectorAll('.carousel-slide');
    const totalSlides = slides.length;

    function showSlide(index) {
        slides.forEach((slide, i) => {
            slide.classList.toggle('active', i === index);
        });
    }

    function nextSlide() {
        currentIndex = (currentIndex + 1) % totalSlides;
        showSlide(currentIndex);
    }

    setInterval(nextSlide, 3000); // Change slide every 3 seconds


   
</script>
<script>
    const thoughts = [
        'Building Dreams for the Underprivileged',
        'Empowering the Next Generation',
        'Creating a Brighter Tomorrow'
    ];

    let currentThought = 0;
    const animatedText = document.getElementById('animated-thought');

    function typewriterEffect() {
        let currentText = thoughts[currentThought];
        let charIndex = 0;
        animatedText.textContent = '';

        const typingInterval = setInterval(() => {
            animatedText.textContent += currentText[charIndex];
            charIndex++;

            if (charIndex === currentText.length) {
                clearInterval(typingInterval);

                // Erase the text after a delay
                setTimeout(eraseEffect, 2000);
            }
        }, 100); // Speed of typing
    }

    function eraseEffect() {
        let currentText = animatedText.textContent;
        let charIndex = currentText.length;

        const erasingInterval = setInterval(() => {
            animatedText.textContent = currentText.substring(0, charIndex - 1);
            charIndex--;

            if (charIndex === 0) {
                clearInterval(erasingInterval);

                // Move to the next thought and restart typing
                currentThought = (currentThought + 1) % thoughts.length;
                setTimeout(typewriterEffect, 500);
            }
        }, 50); // Speed of erasing
    }

    // Start the typing effect on page load
    setTimeout(typewriterEffect, 500);
</script>



