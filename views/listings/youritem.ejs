<% layout("layouts/boilerplate") %>

<h1 class="text-center my-5">All Scholarship Posted by Goverment of India</h1>

<% if (listings.length) { %>
    <div class="container my-3">
        <div class="row">
            <% listings.forEach(listing => { %>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="listing-card">
                        <img src="<%= listing.images[0]?.url || '/default-image.jpg' %>" class="card-img-top" alt="image">
                        <h2><%= listing.title %></h2>
                        <p><%= listing.category %></p>
                        <a href="/listings/<%= listing._id %>" class="w-50  d-flex text-center rounded align-items-centers justify-content-center">View </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
<% } else { %>
    <p class="text-center">No Scholarship Listed.</p>
<% } %>

<style>
/* Listing cards styling */
.listing-card {
    background-color: #f8f8f8;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.listing-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 2px solid #ddd;
}

.listing-card h2 {
    font-size: 1.25rem;
    margin: 10px 0;
    padding: 0 10px;
}

.listing-card p {
    padding: 0 10px;
    color: #666;
}

.listing-card a {
    display: inline-block;
    margin: 15px 10px;
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.listing-card a:hover {
    background-color: #0056b3;
}

/* Hover effect on listing card */
.listing-card:hover {
    transform: translateY(-5px);
}
</style>
