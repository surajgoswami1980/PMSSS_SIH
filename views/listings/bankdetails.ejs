<% layout("layouts/boilerplate") %>

    <div class="container1 mt-5">
        <form method="POST" action="/submitbankdetails" novalidate class="needs-validation" >
            <!-- Step 1: Personal Details -->
            <div id="bank-details" class="form-section ">
                <h4>Bank Details</h4>
            
                <!-- Account Name and Account Number -->
                <div class="row">
                    <div class="col-md-6">
                        <label for="accountName" class="form-label">Account Holder's Name</label>
                        <input type="text" id="accountName" name="bankDetails[accountHolderName]" class="form-control" placeholder="Enter account holder's name" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Account holder's name is required.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="accountNumber" class="form-label">Account Number</label>
                        <input type="text" id="accountNumber" name="bankDetails[accountNumber]" class="form-control" placeholder="Enter your account number" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Account number is required.</div>
                    </div>
                </div>
            
                <!-- Re-enter Account Number and IFSC Code -->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label for="reAccountNumber" class="form-label">Re-enter Account Number</label>
                        <input type="text" id="reAccountNumber" name="bankDetails[reAccountNumber]" class="form-control" placeholder="Re-enter your account number" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please re-enter the account number.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="ifsc" class="form-label">IFSC Code</label>
                        <input type="text" id="ifsc" name="bankDetails[ifscCode]" class="form-control" placeholder="Enter your bank IFSC code" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">IFSC code is required.</div>
                    </div>
                </div>
            
                <!-- Branch Address -->
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label for="branchAddress" class="form-label">Branch Address</label>
                        <input type="text" id="branchAddress" name="bankDetails[branchAddress]" class="form-control" placeholder="Enter branch address" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Branch address is required.</div>
                    </div>
                </div>
            
                <!-- Navigation Buttons -->
                <div class="row mt-3">
                    <div class="col-md-12">
                        <a href="/submitpersonaldetails"><button type="button" class="btn btn-secondary back-btn">Back</button></a>
                        <button type="submit" class="btn btn-primary next-btn">Next</button>
                    </div>
                </div>
            </div>
  
     </form>       
   </div>

